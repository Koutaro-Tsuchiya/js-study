      img(src="images/avatar.png")
    ul.right-link
      li.link-item: a(href="#") LINKS
      li.link-item: a(href="#") CONTACTS
  .top
    h1 Motivation Is The First
      br
      | Step To
      span.while  Success
    ul.socials
      li.social-item: a(href="#"): img(src="images/twitter.svg")
      li.social-item: a(href="#"): img(src="images/be.svg")
      li.social-item: a(href="#"): img(src="images/insta.svg")
  .works
    p.mark WORKS
    .post-wrapper
      .post
        .post-img: img(src="images/works1.png")
